<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="שם המוצר"
        android:textAlignment="center"
        android:id="@+id/txtItemName"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/spnCategories">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="כמות"
            android:textSize="25dp"
            android:id="@+id/lblAmount"/>
        <EditText
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:id="@+id/txtAddAmount"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="מחיר:"
            android:textSize="25dp"
            android:id="@+id/lblPrice"/>
        <EditText
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:id="@+id/txtAddPrice"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="₪"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/lblNis1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="סה'כ למוצר זה:"
            android:textSize="20dp"
            android:id="@+id/lblTotal"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/lblShowTotal"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="₪"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/lblNis2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@mipmap/add_product"

            android:id="@+id/btnSaveItem"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/x"
            android:id="@+id/btnCancelItem"/>
    </LinearLayout>


</LinearLayout>